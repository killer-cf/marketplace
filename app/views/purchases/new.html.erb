<%= form_with model: @purchase do |f| %>
  <%= f.hidden_field :client_id, value: current_client.id %>
  <%= fields_for @card do |c| %>
    <%= c.label :number %>
    <%= c.text_field :number %>

    <%= c.label :name %>
    <%= c.text_field :name %>

    <%= c.label :code %>
    <%= c.text_field :code %>

    <%= c.label :valid_date %>
    <%= c.date_field :valid_date %>

    <%= c.label :cpf %>
    <%= c.text_field :cpf %>
  <% end %>
  <%= f.submit 'Fazer pagamento' %>
<% end %>
