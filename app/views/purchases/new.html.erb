<%= form_with model: @purchase do |f| %>
  <%= f.hidden_field :client_id, value: current_client.id %>

  <%= f.label :card_number %>
  <%= f.text_field :card_number %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :code %>
  <%= f.text_field :code %>

  <%= f.label :valid_date %>
  <%= f.date_field :valid_date %>

  <%= f.label :cpf %>
  <%= f.text_field :cpf %>

  <%= f.submit 'Fazer pagamento' %>
<% end %>
